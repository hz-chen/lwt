#include <pthread.h>
#include <semaphore.h>
#include <stdio.h>
#include <stdlib.h>
#include "lwt.h"

#define NITER 1000000

int count = 0;

//sem_t sem;
void * ThreadAdd(void * a)
{

	int i, tmp;
	for(i = 0; i < NITER; i++)
	{
//		sem_wait(&sem);
		tmp = count;      /* copy the global count locally */
		tmp = tmp+1;      /* increment the local copy */
		count = tmp;      /* store the local value into the global count */ 
//		sem_post(&sem);
	}
//	sem_destroy(&sem);
	return NULL;
}

int main(int argc, char * argv[])
{
	lwt_t tid1, tid2;
//	sem_init(&sem, 0, 1);

	tid1 = lwt_kthd_create(ThreadAdd, NULL, NULL);
	tid2 = lwt_kthd_create(ThreadAdd, NULL, NULL);

	sleep(3);

	if (count < 2 * NITER) 
		printf("\n BOOM! count is [%d], should be %d\n", count, 2*NITER);
	else
		printf("\n OK! count is [%d]\n", count);

	pthread_exit(NULL);
}



